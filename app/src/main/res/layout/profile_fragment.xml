<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/profilefragmentId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="Create Profile"
        android:textAlignment="center"
        android:textSize="20sp" />

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:layout_marginBottom="5dp">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="My Profile"
           android:textColor="#FFC107"
           android:layout_margin="10dp"
           android:textSize="25sp"/>
       <ImageButton
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/ic_baseline_edit_24"
           android:id="@+id/editingmyProfileImageButtonId"
           android:layout_margin="10dp"
           android:layout_gravity="right|center_vertical"

           />

   </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="50dp"
            android:layout_gravity="center_vertical"
            app:cardPreventCornerOverlap="false">

            <ImageView
                android:id="@+id/myprofileImageId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/ic_baseline_person_24"
                android:layout_margin="5dp"
                android:clickable="true"
                android:scaleType="fitCenter" />

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/myprofileNameId"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="name"
                android:paddingStart="10dp"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/myprofileAgeId"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Age"
                android:paddingStart="10dp"
                android:textAlignment="center"/>
        </LinearLayout>




    </LinearLayout>
    <TextView
        android:id="@+id/myprofileInstitutionId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Institution"
        android:paddingStart="10dp"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/myprofileId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Id"
        android:paddingStart="10dp"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/myprofileHobbyId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Hobby"
        android:paddingStart="10dp"
        android:textAlignment="center"/>


</LinearLayout>